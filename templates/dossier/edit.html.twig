{% extends 'basedashboard.html.twig' %}

{% block title %}
    Edit Dossier
        
    
{% endblock %}

{% block content %}
    <div class="col-md-7 col-lg-8 col-xl-9">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">
                            Modifier un dossier
                                                    
                        </font>
                    </font>
                </h4>
            </div>
            
            <div class="card-body">
							<div class="card-header">
								<h5 class="card-title">Modifier dossier</h5>
							</div>
							{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
							<div class="settings-form">

								<div class="col-md-6">
									<div class="form-group">
										<label>Numero dossier
											<span class="star-red">*</span>
										</label>
										{{ form_widget(form.numero, {attr:{'class':'form-control'}}) }}
										<small>{{ form_help(form.numero)}}</small>
								        <div class="form_error">
								           {{form_errors(form.numero)}}
								        </div>
									</div>
								</div>
								<div class="form-group">
									<label>code APCI
										<span class="star-red">*</span>
									</label>
									{{ form_widget(form.code_APCI, {attr:{'class':'form-control'}}) }}
									<small>{{ form_help(form.code_APCI)}}</small>
								        <div class="form_error">
								           {{form_errors(form.code_APCI)}}
								        </div>
								</div>
                                <div class="col-md-6">
									<div class="form-group">
										<label>description
											<span class="star-red">*</span>
										</label>
										{{ form_widget(form.description, {attr:{'class':'form-control'}}) }}
										<small>{{ form_help(form.description)}}</small>
								        <div class="form_error">
								           {{form_errors(form.description)}}
								        </div>
									</div>
								</div>
							
                                
								<div class="upload-file">
									

					
										<div class="col-12">
											<div class="doctor-submit text-end">
												<div class="text-right">
													{{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary save-btn'}}) }}


												</div>
											</div>
										</div>
									</div>
									{{ form_end(form) }}
								</div>
								<center></div>

							</div>


						</div>
                
               
            <div class="card card-table"></div>
            

        </div>
    </div>
</div>
{% endblock %}
