{% extends 'basedashboard.html.twig' %}
{% block title %}
    Medecin Dashboard
                                                
                                            
                                        
                                    
                                
                            
                        
                    
                
            
        
    
{% endblock %}
{% block content %}
    <div class="col-md-7 col-lg-8 col-xl-9">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">
                            Modifier une ordonnance
                                                    
                        </font>
                    </font>
                </h4>
            </div>
            <div class="card-body">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center">
                                <thead>
                                    <tr>
                                        <th style="min-width: 80px">
                                            <font style="vertical-align: inherit;">
                                                <font style="vertical-align: inherit;">
                                                    Description
                                                                                                    
                                                </font>
                                            </font>
                                        </th>
                                        <th style="min-width: 80px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        {{ form_start(form,{'attr':{'novalidate':'novalidate' }}
                                        ) }}
                                                                                
                                                                                
                                                                                
                                        <td>
                                            {{ form_widget(form.description, {attr:{'class':'form-control' }}
                                            ) }}
                                            {% if form_errors(form.description) is not empty %}
                                                <div class="alert alert-danger" {{ form_errors(form.description) }}
                                                    </div>
                                                    {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                    
                    <div class="col-md-12">
                        
                        
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="submit-section">
                                    {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary submit-btn' }}
                                    ) }}
                                                                                                
                                                                                                
                                                                        
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;"></font>
                                    </font>
                                </button>
                            </div>
                        </div>
                    </div>
                


                
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}{% endblock %}
