{% extends 'basedashboard.html.twig' %}

{% block title %}
    Medecin Dashboard
                                                    
                                                
                                            
                                        
                                    
                                
                            
                        
                    
                
            
        
    
{% endblock %}
{% block content %}
    <div class="col-md-7 col-lg-8 col-xl-9">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">
                            Ajouter une ordonnance
                                                                                
                                                    
                        </font>
                    </font>
                </h4>
            </div>
            <div class="card-body">

                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center">
                                <thead>
                                    <tr>

                                        <th style="min-width: 80px">
                                            <font style="vertical-align: inherit;">
                                                <font style="vertical-align: inherit;">
                                                    Description
                                                                                                                                                        
                                                                                                    
                                                </font>
                                            </font>
                                        </th>

                                        <th style="min-width: 80px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                                    <tr>

                                        <td>
                                            {{ form_widget(form.description, {attr:{'class':'form-control' }}
                                            ) }}
                                            
                                            {% if form_errors(form.description) is not empty %}
                                        <div class="alert alert-danger" {{ form_errors(form.description) }} </div>
                                            {% endif %}
                                        </div>                                                                            
                                                                                    
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="upload-img">
                    <div class="change-photo-btn">
                        <span>
                            <i class="fa fa-upload"></i>
                            importer l'ordonnance
                        </span>
                        <input type="file" class="upload"></div>
                        <small class="form-text text-muted">
                            importer JPG, GIF ou PNG. Max size of 2MB
                        </small>
                    </div>
                    <div class="col-md-12">
                        
                        
                        <div class="row">
                            <div class="col-md-12 text-end">
                                <div class="signature-wrap">
                                    <div class="signature">
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">
                                                Cliquez ici pour signer
                                                                                                                                    
                                                                                                                                
                                                                                            
                                            </font>
                                        </font>
                                    </div>
                                    <div class="sign-name">
                                        <span class="text-muted">
                                            <font style="vertical-align: inherit;">
                                                <font style="vertical-align: inherit;">
                                                    Signature
                                                                                                                                            
                                                                                                    
                                                </font>
                                            </font>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="submit-section">
                                    {{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary submit-btn' }}
                                    ) }}
                                                                                                
                                                                                                
                                                                        
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;"></font>
                                    </font>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        {% endblock %}
