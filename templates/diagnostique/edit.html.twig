{% extends 'basedashboard.html.twig' %}

{% block title %}
    Edit Diagnostique
        
    
{% endblock %}

{% block content %}
    <div class="col-md-7 col-lg-8 col-xl-9">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">
                            Modifier un diagnostique
                                                    
                        </font>
                    </font>
                </h4>
            </div>
            
            <div class="card-body">
							<div class="card-header">
								<h5 class="card-title">Modifier diagnostique</h5>
							</div>
							{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
							<div class="settings-form">

								<div class="col-md-6">
									<div class="form-group">
										<label>Date diagnostique
											<span class="star-red">*</span>
										</label>
										{{ form_widget(form.date, {attr:{'class':'form-control'}}) }}
										<small>{{ form_help(form.date)}}</small>
								        <div class="form_error">
								           {{form_errors(form.date)}}
								        </div>
									</div>
								</div>
								<div class="form-group">
									<label>Symptome
										<span class="star-red">*</span>
									</label>
									{{ form_widget(form.symptome, {attr:{'class':'form-control'}}) }}
									<small>{{ form_help(form.symptome)}}</small>
								        <div class="form_error">
								           {{form_errors(form.symptome)}}
								        </div>
								</div>
                                <div class="col-md-6">
									<div class="form-group">
										<label>Resultat du test
											<span class="star-red">*</span>
										</label>
										{{ form_widget(form.resultat_test, {attr:{'class':'form-control'}}) }}
										<small>{{ form_help(form.resultat_test)}}</small>
								        <div class="form_error">
								           {{form_errors(form.resultat_test)}}
								        </div>
									</div>
								</div>
                                <div class="col-md-6">
									<div class="form-group">
										<label>Diagnostique final
											<span class="star-red">*</span>
										</label>
										{{ form_widget(form.diag_final, {attr:{'class':'form-control'}}) }}
										<small>{{ form_help(form.diag_final)}}</small>
								        <div class="form_error">
								           {{form_errors(form.diag_final)}}
								        </div>
									</div>
								</div>
	            

                                
								<div class="upload-file">
					
										<div class="col-12">
											<div class="doctor-submit text-end">
												<div class="text-right">
													{{ form_row(form.Enregistrer , {attr:{'class':'btn btn-primary save-btn'}}) }}


												</div>
											</div>
										</div>
									</div>
									{{ form_end(form) }}
								</div>
								<center></div>

							</div>


						</div>
                
               
            <div class="card card-table"></div>
            

        </div>
    </div>
</div>
{% endblock %}